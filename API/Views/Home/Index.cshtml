@model IEnumerable<ProductApi.Models.Product>

@{
    ViewData["Title"] = "Products";
}

@* Creating a simple website for viewing the products, this could be expanded with more features later *@
@* including adding pictures, a true e-commerce experience, and user accounts *@
@* This only includes basic HTML and CSS. No JavaScript or advanced styling is included *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Product API</title>
	<link rel="icon" type="image/png" href="https://www.dmskaspr.com/images/icon-small.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f4;
            color: #333;
			cursor: default;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        header, footer {
            background-color: #007bff;
            color: white;
            text-align: center;
            padding: 1rem 0;
        }

        header h1 {
            margin: 0;
        }

        main {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

		.logo {
			height: 50px;
		}
		
        /* Grid layout */
        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 1.5rem;
        }

        /* Product card */
        .product-card {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            padding: 1rem;
            display: flex;
            flex-direction: column;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        }

        .product-title {
            font-size: 1.1rem;
            font-weight: bold;
            margin: 0 0 0.5rem 0;
        }

        .product-price {
            color: #28a745;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .btn-add {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 0.5rem;
            cursor: pointer;
            border-radius: 4px;
            font-weight: bold;
            margin-top: auto; /* push button to bottom */
        }

        .btn-add:hover {
            background-color: #0056b3;
        }

        .empty-message {
            text-align: center;
            font-size: 1.2rem;
            color: #666;
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <header>
		<img src="https://www.dmskaspr.com/images/icon-small.png" alt="DMS Logo" class="logo" />
        <h1>Product API</h1>
    </header>

    <main>
        <h2 style="text-align:center; margin-bottom:2rem;">Our Products</h2>

        @if (!Model.Any())
        {
            <div class="empty-message">No products available at the moment.</div>
        }
        else
        {
            <div class="products-grid">
                @foreach (var product in Model)
                {
                    <div class="product-card">
                        <div class="product-title">@product.Name</div>
                        <div class="product-price">@product.Price.ToString("C")</div>
						<button class="btn-add" disabled>Add to Cart</button>
                    </div>
                }
            </div>
        }
    </main>

    <footer>
        &copy; @DateTime.Now.Year Product API. All rights reserved.
    </footer>
</body>
</html>